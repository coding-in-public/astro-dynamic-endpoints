<form class="max-w-md grid gap-4" id="add-post">
  <div class="grid">
    <label for="title">Title</label>
    <input type="text" name="title" id="title" />
  </div>
  <div class="grid">
    <label for="userId">Author ID</label>
    <input type="number" min="1" max="100" name="userId" id="userId" />
  </div>
  <div class="grid">
    <label for="body">Post Content</label>
    <textarea name="body" id="body" cols="30" rows="10"></textarea>
  </div>
  <button type="submit" class="text-blue-50 bg-blue-500 p-2">Submit</button>
</form>

<script>
  const newPostForm = document.querySelector("#add-post") as HTMLFormElement;
  newPostForm?.addEventListener("submit", async (e) => {
    e.preventDefault();
    const formData = new FormData(newPostForm);
    const values = Object.fromEntries(formData);
    const res = await fetch("/api/posts.json", {
      method: "POST",
      body: JSON.stringify(values),
    });
    const { message } = await res.json();
    console.log("ðŸš€ ~ newPostForm?.addEventListener ~ message:", message);
  });
</script>
